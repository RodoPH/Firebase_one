<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Agenda personal "/>

    <EditText
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_nombre"
        android:inputType="textPersonName"
        android:hint="Nombre: "
        android:layout_marginTop="10dp"/>
    <EditText
        android:inputType="number"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_telefono"
        android:hint="Núm. Tel : "
        android:layout_marginTop="10dp"/>
    <EditText
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maint_mail"
        android:hint="Mail: "
        android:layout_marginTop="10dp"/>
    <EditText
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_dirección"
        android:hint="Dirección: "
        android:inputType="text"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Lista de contactos"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Nombre:"
        android:textStyle="bold"
        android:layout_gravity="left"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lista_personas"
        android:layout_marginTop="10dp"
        />

</LinearLayout>